<h2>Create a Story Space for your Quoteworthies!</h2>
<%if flash[:notice]%>
  <h3><%= flash[:notice]%></h3>
<%end%>
  <form action='/stories' method="POST">
    <label for="name"></label>
    <input type="text" name="name" value="" placeholder="Story Title">
    <label for="author"></label>
    <input type="text" name="author" value="" placeholder="Author">
    <input type="submit" value="Create Story">
  </form>
